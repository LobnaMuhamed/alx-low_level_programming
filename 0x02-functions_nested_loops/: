#include "main.h"
#include <stdio.h>

/**
 * print_times_table - a function that prints the n times table, starting with 0
 * @n: input value
*/

void print_times_table(int n)
{
	int i, j, m;

	if (n > 15 || n < 0)
		printf(" ");

	else
	{
	for (i = 0 ; i <= n ; i++)
	{
		for (j = 0 ; j <= n ; j++)
		{
			m = i * j;
			
				if (m > 99)
				{
					_putchar((m / 100) + '0');
				}
				else if (m <= 99 && m > 9)
				{
					_putchar((m / 10) + '0');
				}
				_putchar((m % 10) + '0');
				_putchar(' ');
			
		}
		printf("\n");
	
	}
	}
	printf("\n");
}
